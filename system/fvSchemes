FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme          Tadmor;

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;

    div(tauMC)      Gauss linear;
    div(phi,k)      Gauss upwind;
    div(phi,omega)  Gauss upwind;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;

    reconstruct(rho)    Minmod;
    reconstruct(U)      Minmod;
    reconstruct(T)      Minmod;
    
    reconstruct(e)      Minmod;
    reconstruct(h)      Minmod;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave;
}

